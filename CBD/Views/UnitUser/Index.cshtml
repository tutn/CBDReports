<<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Unit Users
            @*<small>advanced tables</small>*@
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Unit Users</a></li>
            <li class="active">@*Data tables*@</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content" ng-controller="unituserController" ng-init="init()">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <button class="ng-binding btn btn-success" type="button" ng-click="addModel()"><i class="fa fa-plus"></i> Add</button>
                    </div>
                    <form class="form-horizontal">
                        <div class="box-body">
                            <div class="row form-group">
                                <div class="col-xs-2">
                                    <label for="sunit" class="control-label">Unit</label>
                                </div>
                                <div class="col-xs-3">
                                    <select class="form-control" id="sunit" ng-model="sUnitId" ng-options="item.ID as item.NAME for item in Units">
                                        <option value="" selected>----- All -----</option>
                                    </select>
                                </div>
                                <div class="col-xs-2">
                                </div>
                                <div class="col-xs-2">
                                    <label for="susername" class="control-label">User Name</label>
                                </div>
                                <div class="col-xs-3">
                                    <input type="text" id="susername" class="form-control input-sm" placeholder="User Name" ng-model="sUserName">
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col-xs-2">
                                    <label for="sstatus" class="control-label">Used State</label>
                                </div>
                                <div class="col-xs-3">
                                    <select class="form-control" id="sstatus" ng-model="sStatus" ng-options="item.Value as item.Name for item in Status">
                                        <option value="" selected>----- All -----</option>
                                    </select>
                                </div>
                                <div class="col-xs-7">
                                    <button type="submit" class="btn btn-info" ng-click="search()"><i class="fa fa-search"></i> Search</button>
                                    <button class="btn btn-default" type="button" ng-hide="sUserName === '' && sUnitId === ''&& (sStatus === '' || sStatus === undefined)" ng-click="clear(true)"><i class="fa fa-refresh"></i> Reset</button>
                                </div>

                            </div>
                        </div><!-- /.box-body -->
                    </form>
                    <p ng-hide="Items.length > 0">There are record not found.</p>
                    <div class="box-body" ng-show="Items.length > 0" style="overflow:auto;">
                        <table class="table-striped angular-grid" tr-ng-grid="" items="Items" page-items="pageSize" total-items="Total" on-data-required="GenerateData(currentPage, pageItems)">
                            <thead>
                                <tr>
                                    <th display-name="USER_NAME" enable-filtering="false" enable-sorting="false"></th>
                                    <th display-name="UNIT_NAME" enable-filtering="false" enable-sorting="false"></th>
                                    <th display-name="USEDSTATE_NAME" enable-filtering="false" enable-sorting="false"></th>
                                    <th enable-filtering="false" enable-sorting="false"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><p>{{gridItem.USER_NAME}}</p></td>
                                    <td><p>{{gridItem.UNIT_NAME}}</p></td>
                                    <td><p>{{gridItem.USEDSTATE_NAME}}</p></td>
                                    <td>
                                        @*<i class="fa fa-pencil-square" aria-hidden="true" data-toggle="modal" ng-click="editRecord(gridItem)"></i>*@
                                        <i class="fa fa-trash" aria-hidden="true" ng-click="deleteRecord(gridItem)"></i>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td>
                                        <div class="btn-group" role="group" aria-label="...">
                                            <button type="button" class="btn btn-default" ng-click="setPageSize(10)">10</button>
                                            <button type="button" class="btn btn-default" ng-click="setPageSize(20)">20</button>
                                            <button type="button" class="btn btn-default" ng-click="setPageSize(30)">30</button>
                                        </div>
                                        <span tr-ng-grid-pager=""></span>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                        <div class="clear"></div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
        <!-- Modal -->
        <div id="dialogModal" class="modal fade" role="dialog" data-backdrop="static">
            <div class="modal-dialog modal-lg">
                <div class="col-lg-12">
                    <!-- Horizontal Form -->
                    <div class="box {{IsEdit == false ? 'box-success' : 'box-warning'}}">
                        <div class="box-header with-border">
                            <h3 class="box-title">{{IsEdit == false ? 'Add' : 'Update'}} User to Unit</h3>
                        </div><!-- /.box-header -->
                        <!-- form start -->
                        <form role="form" name="user">
                            <div class="box-body">
                                <div>
                                    

                                </div>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <multiselect-searchtree data-input-model="UnitNodes"
                                                                multi-select="true"
                                                                data-output-model="selectedItem2"
                                                                data-callback="CustomCallback(item, selectedItems)"
                                                      
                                                                data-select-only-leafs="false"
                                                                extra-buttons="true"
                                                                filter-type="hidden">
                                        </multiselect-searchtree>
                                    </div>
                                    <div class="col-sm-6">
                                        <table class="table-striped angular-grid" tr-ng-grid="" items="UserItems" page-items="pageSizeU" total-items="UserTotal" on-data-required="GenerateUserData(currentPage, pageItemsU)">
                                            <thead>
                                                <tr>
                                                    <th display-name="" enable-filtering="false" enable-sorting="false"><input type="checkbox"  /></th>
                                                    <th display-name="USER_NAME" enable-filtering="false" enable-sorting="false"></th>
                                                    <th display-name="FULL_NAME" enable-filtering="false" enable-sorting="false"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <td><input type="checkbox" ng-model="gridItem.USER_NAME"/></td>
                                                    <td><p>{{gridItem.USER_NAME}}</p></td>
                                                    <td><p>{{gridItem.FULL_NAME}}</p></td>
                                                </tr>
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td>
                                                        <div class="btn-group" role="group" aria-label="...">
                                                            <button type="button" class="btn btn-default" ng-click="setPageSizeU(10)">10</button>
                                                            <button type="button" class="btn btn-default" ng-click="setPageSizeU(20)">20</button>
                                                            <button type="button" class="btn btn-default" ng-click="setPageSizeU(30)">30</button>
                                                        </div>
                                                        <span tr-ng-grid-pager=""></span>
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div><!-- /.box-body -->
                            <div class="box-footer">
                                <button type="submit" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                <button type="submit" class="btn {{IsEdit == false ? 'btn-success' : 'btn-warning'}} pull-right" ng-disabled="UnitNodes.length === 0" ng-click="submit()"><i class="fa {{IsEdit == false ? 'fa-plus' : 'fa-pencil-square'}}"></i> {{IsEdit == false ? 'Add' : 'Update'}} User</button>
                            </div><!-- /.box-footer -->
                        </form>
                    </div><!-- /.box -->
                </div>
            </div>
        </div>
        <script type="text/ng-template" id="nodes_renderer.html">
            <span class="icon expand-icon glyphicon glyphicon-minus">{{node.NAME}}</span>

            @*<span class="pull-right-container">
                    <i class="fa fa-angle-left pull-right"></i>
                </span>*@
            <ul class="list-group">
                <li class="list-group-item" ng-repeat="node in node.Nodes" ng-include="'nodes_renderer.html'"></li>
            </ul>
        </script>
        <!-- Modal end -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->
